<h1>Please enter an LP or 45:</h1>

<%= form_tag '/vinyls', method: :post do %>
  <div>
    <%= label_tag :artist_name %>
    <%= text_field_tag :artist_name %>
  </div>

  <div>
    <%= label_tag :record_title %>
    <%= text_field_tag :record_title %>
  </div>

  <div>
    <%= label_tag :genre %>
    <%= text_field_tag :genre %>
  </div>

  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>

  <div>
    <%= label_tag :playtime %>
    <%= text_field_tag :playtime %>
  </div>

  <div>
    <%= label_tag :label %>
    <%= text_field_tag :label %>
  </div>

  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>
  <br>
  <div>
    <%= submit_tag "I Want To Buy This Album" %>
  </div>

<% end %>